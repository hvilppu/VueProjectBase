{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "strictFunctionTypes": false,
    "lib": [ "es2017", "dom", "scripthost" ],
    "typeRoots": [ "../node_modules/@types" ]
  },
  "exclude": [
    "bin"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.vue.html"
  ]
}
